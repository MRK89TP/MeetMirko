<UserControl x:Class="MeetMirko.SendResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MeetMirko"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button Name="Btn_SendResult"
                Height="100"
                Width="200" 
                Content="Send Result to Mirko!"
                Click="Btn_SendResult_Click"/>

        <Button Name="Btn_SendWhatsApp"
                Grid.Column="1"
                Height="100"
                Width="200"
                Content="Send WhatsApp to Mirko!"
                Click="Btn_SendWhatsApp_Click"/>

    </Grid>
</UserControl>
